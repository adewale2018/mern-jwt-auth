{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020", // Target modern JavaScript
    "module": "commonjs", // Use CommonJS modules (Node.js compatible)
    "rootDir": "./src", // Specify the root directory for source files
    "outDir": "./dist", // Specify the output directory for compiled files
    "esModuleInterop": true, // Allow interoperation between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file imports
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true // Skip type checking for .d.ts files
  },
  "include": ["src/**/*"], // Include all files in the src folder
  "exclude": ["node_modules"] // Exclude node_modules
}
